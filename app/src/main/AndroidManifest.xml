<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.avadio.android.ilove.app">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/the_love_foundation_square_arial_400x400"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:icon="@drawable/the_love_foundation_square_arial_400x400"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"></activity>

        <provider
            android:name="database.MyContentProvider"
            android:authorities="com.avadio.quotes.contentprovider"
            android:enabled="true"
            android:exported="true"></provider>

        <activity
            android:parentActivityName=".HomeActivity"
            android:name=".AboutUsActivity"
            android:label="@string/title_activity_about_us">
            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AboutUsActivity" />
        </activity>
        <activity
            android:name=".DonateActivity"
            android:parentActivityName=".AboutUsActivity"
            android:label="@string/title_activity_donate">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>
    </application>

</manifest>
